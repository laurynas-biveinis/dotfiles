#!/bin/zsh

set -euo pipefail

readonly NIGHTLY=~/nightly.out

if [[ ! -f $NIGHTLY ]]; then
    echo "$NIGHTLY not present"
    exit
fi

less ~/nightly.out

while true; do
    read -r "?Delete $NIGHTLY? " yn
    case $yn in
        [Yy]* ) rm $NIGHTLY; break;;
        [Nn]* ) exit;;
        * ) echo "Please answer y or n";;
    esac
done
